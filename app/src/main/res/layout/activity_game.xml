<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunbu.sdk.demo.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_columnSpan="4"
                android:gravity="center"
                android:text="游戏整体概况"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp" />

            <TextView
                android:gravity="center"
                android:text="进度：" />

            <EditText
                android:id="@+id/progress_edit"
                android:layout_columnSpan="3"
                android:hint="请输入当前进度"
                android:inputType="number"
                android:text="25" />

            <TextView
                android:gravity="center"
                android:text="钻石总数：" />

            <EditText
                android:id="@+id/diamond_edit"
                android:layout_columnSpan="3"
                android:hint="请输入总钻石数"
                android:inputType="number"
                android:text="500" />

            <TextView
                android:gravity="center"
                android:text="金币总数：" />

            <EditText
                android:id="@+id/gold_edit"
                android:layout_columnSpan="3"
                android:hint="请输入总金币数"
                android:inputType="number"
                android:text="1000" />

            <TextView
                android:gravity="center"
                android:text="总积分：" />

            <EditText
                android:id="@+id/score_edit"
                android:layout_columnSpan="3"
                android:hint="请入积分"
                android:inputType="number"
                android:text="25000" />

            <TextView
                android:gravity="center"
                android:text="背包数据：" />

            <EditText
                android:id="@+id/package_edit"
                android:layout_columnSpan="3"
                android:hint="请输入背包内容"
                android:text="{'blood':15}" />

            <TextView
                android:gravity="center"
                android:text="自定义数据：" />

            <EditText
                android:id="@+id/custom_edit"
                android:layout_columnSpan="3"
                android:hint="请输入自定义数据"
                android:text="{'test':'test'}" />

            <TextView
                android:layout_columnSpan="4"
                android:gravity="center"
                android:text="关卡数据"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp" />

            <TextView
                android:gravity="center"
                android:text="关数：" />

            <EditText
                android:id="@+id/level_edit"
                android:layout_columnSpan="3"
                android:hint="请输入当前进度"
                android:inputType="number"
                android:text="25" />

            <TextView
                android:gravity="center"
                android:text="分数：" />

            <EditText
                android:id="@+id/level_score_edit"
                android:layout_columnSpan="3"
                android:hint="请输入这一关获得的积分"
                android:inputType="number"
                android:text="1250" />

            <TextView
                android:gravity="center"
                android:text="自定义数据：" />

            <EditText
                android:id="@+id/custom_level_edit"
                android:layout_columnSpan="3"
                android:hint="请输入当前关自定义数据"
                android:text="{'level':'level'}" />

            <Button
                android:layout_columnSpan="1"
                android:onClick="saveGame"
                android:text="数据保存" />

            <Button
                android:layout_columnSpan="1"
                android:onClick="getGame"
                android:text="数据加载" />

            <Button
                android:layout_columnSpan="1"
                android:onClick="toLevel"
                android:text="关卡详情" />
        </GridLayout>

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="top"
            android:hint="Click result" />
    </LinearLayout>
</ScrollView>

