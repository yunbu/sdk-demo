<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunbu.sdk.demo.pay.PayLogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:gravity="center"
                android:text="渠道：" />

            <EditText
                android:id="@+id/channel_edit"
                android:layout_columnSpan="3"
                android:hint="请输入当前渠道"
                android:text="oppo" />

            <TextView
                android:gravity="center"
                android:text="订单编号：" />

            <EditText
                android:id="@+id/order_edit"
                android:layout_columnSpan="3"
                android:hint="请输入订单编号"
                android:text="123456789" />

            <TextView
                android:gravity="center"
                android:text="产品ID：" />

            <EditText
                android:id="@+id/product_id"
                android:layout_columnSpan="3"
                android:hint="请输入产品ID"
                android:text="1001" />

            <TextView
                android:gravity="center"
                android:text="产品名称：" />

            <EditText
                android:id="@+id/product_name"
                android:layout_columnSpan="3"
                android:hint="请输入产品名称"
                android:text="磁带x2" />

            <TextView
                android:gravity="center"
                android:text="产品描述：" />

            <EditText
                android:id="@+id/product_desc"
                android:layout_columnSpan="3"
                android:hint="请输入产品描述"
                android:text="可以用来解密一次" />

            <TextView
                android:gravity="center"
                android:text="单价（分）：" />

            <EditText
                android:id="@+id/price_edit"
                android:layout_columnSpan="3"
                android:hint="请输入产品单价"
                android:inputType="number"
                android:text="100" />

            <TextView
                android:gravity="center"
                android:text="购买数量：" />

            <EditText
                android:id="@+id/count_edit"
                android:layout_columnSpan="3"
                android:hint="请输入购买数量"
                android:inputType="number"
                android:text="1" />

            <TextView
                android:gravity="center"
                android:text="用户持有产品数：" />

            <EditText
                android:id="@+id/rest_coin_edit"
                android:layout_columnSpan="3"
                android:hint="请输入用户当前持有产品数"
                android:inputType="number"
                android:text="10" />

            <TextView
                android:gravity="center"
                android:text="其它信息：" />

            <EditText
                android:id="@+id/extra_edit"
                android:layout_columnSpan="3"
                android:hint="请输入其它备注信息"
                android:text="没有" />

            <Button
                android:layout_columnSpan="4"
                android:layout_columnWeight="1"
                android:onClick="saveData"
                android:text="数据保存" />

        </GridLayout>
    </LinearLayout>
</ScrollView>

